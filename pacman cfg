#
# /etc/pacman.conf
#

[options]
# Prevent removal of essential packages
HoldPkg = pacman glibc

# Set the system architecture (auto is recommended)
Architecture = auto

# Enable colored output
Color

# Show verbose package lists
VerbosePkgLists

# Signature levels for verifying packages
SigLevel = Required DatabaseOptional
LocalFileSigLevel = Optional

# Repositories
[core]
Include = /etc/pacman.d/mirrorlist

[extra]
Include = /etc/pacman.d/mirrorlist

[community]
Include = /etc/pacman.d/mirrorlist

# Uncomment to enable multilib for 32-bit applications
[multilib]
Include = /etc/pacman.d/mirrorlist

# Uncomment and configure the following lines to add custom repositories
#[custom]
#SigLevel = Optional TrustAll
#Server = file:///path/to/custom/repo
