#HookDir     = /etc/pacman.d/hooks/
HoldPkg      = pacman glibc
Architecture = auto

# Colorize output messages
Color

# Verbose package lists
VerbosePkgLists

# By default, pacman accepts packages signed by keys that its local keyring
# trusts (see pacman-key and its man page), as well as unsigned packages.
SigLevel    = Required DatabaseOptional
LocalFileSigLevel = Optional
#RemoteFileSigLevel = Required

# Misc options
# UseSyslog
# ShowSize
# ILoveCandy
# TotalDownload
# CheckSpace
# DisableDownloadTimeout

# NOTE: If you run into issues with package signatures, verify that the
# keyring is properly updated with pacman -Sy archlinux-keyring.

[core]
Include = /etc/pacman.d/mirrorlist

[extra]
Include = /etc/pacman.d/mirrorlist

[community]
Include = /etc/pacman.d/mirrorlist

# If you want to run 32-bit applications on your x86_64 system, enable the
# multilib repository as shown below. If you don't need it, ignore this section.
[multilib]
Include = /etc/pacman.d/mirrorlist

